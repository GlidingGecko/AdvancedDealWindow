        <LuaContext>DiplomacyDealView</LuaContext>
        <LuaReplace>DiplomacyDealView_KublaiKhanVietnam_MODE_Expansion2.lua</LuaReplace>
        <LoadOrder>50003</LoadOrder>
      </Properties>
    </ReplaceUIScript>
